{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs", 
		"lib": ["es5", "es6", "es7", "es2017", "dom"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"experimentalDecorators": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"files": [
		"src/index.ts",
		"src/test.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts"
	]
}